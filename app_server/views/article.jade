extends layout

block content
  main.container(role='main')
    .row
      article.col-md-8.blog-main
        h3.pb-4.mb-4.font-italic.border-bottom= sourceTitle
      
        .blog-post
          h2.blog-post-title= article.title
          p.blog-post-meta
          | #{article.publishDate} written by: 
          a(href='#') #{article.author}

          figure
            img.img-thumbnail(src='../images/jayz.jpg')
            figcaption.font-italic
            | photo credit: 
            a(href='#') #{article.photoCredit}


          hr(style='background-color: white; width: 90%;')
        
          each paragraph in article.paragraphs
            p.text-justify.tab= paragraph.text
          
          .container.comment-section
            h5 Comment
            textarea.rounded-lg.comment-box(name="comment", cols="30", rows="10")
            button.btn.btn-primary.submit-btn(type='submit') Submit

            hr(style='background-color: white; width 90%; margin-top: 75px; margin-bottom: 50px;')

            .comment-template.container
              .media
                img.mr-3(src=profilePic alt='...')
                .media-body
                  h5.mt-0= userName
                  p= comment 
                  button.btn.btn-primary(type='button' style='margin: 5px;') Like
